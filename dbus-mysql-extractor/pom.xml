                </exclusion>
            </exclusions>
        </dependency>

        <!-- 注意guava版本，必须使用19, 否则canal 有错误 -->
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>19.0</version>
        </dependency>

        <dependency>
            <groupId>org.apache.storm</groupId>
            <artifactId>storm-core</artifactId>
        </dependency>

        <!--<dependency>-->
